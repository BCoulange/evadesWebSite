<li class="span6">
	<span class="thumbnail fond-barrault">
    <center>
		<h4><%=user.surnom%></h4>
		<%= link_to user do %>
				<%= image_tag user.avatar.url(:medium) %>
      	<% end%>
      </br>
  <% if user_signed_in? %>

      	<div class="btn-group">
<% if (user == current_user) || current_user.try(:admin?)%>
  				<button class="btn btn-primary"><%= link_to 'Edit', edit_user_path(user) %></button>
<% end %>
    <% unless user==current_user%>
<% if current_user.try(:admin?)%>
  				<button class="btn btn-primary"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          <% if user.try(:admin?)%>
            <button class="btn btn-primary"><%= link_to 'Downgrade', promote_admin_user_path(user) %></button>
          <% else %>
            <button class="btn btn-primary"><%= link_to 'Promote admin', promote_admin_user_path(user) %></button>
          <% end %>
          <% end%>

<%end%>

      	</div>

<% end %>
      </center>
    </span>
</li>



